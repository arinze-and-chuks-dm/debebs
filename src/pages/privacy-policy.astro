---
import ButtonLink from "@components/ButtonLink.astro"
import { navigation } from '@configs/site.json'
import Base from "@layouts/Base.astro"
import { getEntryBySlug, type CollectionEntry } from "astro:content"

const entry = await getEntryBySlug('privacy-policy', "index");
type Props = CollectionEntry<'privacy-policy'>;

const { Content} = await entry.render();
---

<Base title={''} description={''}>
    <section class="max-w-5xl my-20 mx-auto items-center place-items-center">
        <div class='content'>
            <Content />
            <ButtonLink href={navigation["Contact us"]} text="Contact us" black />
        </div>
    </section>
</Base>

