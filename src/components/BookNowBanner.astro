---
import { navigation } from '@configs/site.json'
import ButtonLink from "./ButtonLink.astro"

type Props = {
    text?: string
}

const { text = 'Ready to capture memories with us?' } = Astro.props
---



<section class="p-5 md:py-32 bg-stone-900 text-white mx-auto">
    <div class="flex flex-col items-center space-y-5 lg:flex-row max-w-5xl mx-auto lg:justify-around">
        <p class=" lg:text-4xl text-center">{text}</p>
        <div class="space-y-5 text-center lg:text-left">
          <p>Book a chat with us today. Let us work with you to achieve your ideal photography experience.</p>
          <ButtonLink href={navigation["Contact us"]} className='border-white mx-auto lg:m-0' />
        </div>
    </div>
</section>
