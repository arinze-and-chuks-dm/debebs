---
/**
 * * Base card used for all sidebar cards
 * This allows you to change the core styling in one location
 */

interface Props {
  class?: string;
  rest?: any; // catch-all for any additional parameters, such as "aria-label"
}

const { class: className, ...rest } = Astro.props as Props;
---

<div
  class=`flex flex-col gap-4 border-2 rounded-sm text-center border-accent p-8 ${className}`
  {...rest}
>
  <slot />
</div>
